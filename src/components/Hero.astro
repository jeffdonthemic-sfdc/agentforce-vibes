---
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<section class="hero">
  <div class="container">
    <div class="hero__content">
      <h1 class="hero__title">{title}</h1>
      <p class="hero__description">{description}</p>
    </div>
  </div>
</section>
