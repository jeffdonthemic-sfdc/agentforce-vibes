---
const base = import.meta.env.BASE_URL;
---

<section class="skills-cta">
  <div class="container">
    <div class="skills-cta__content">
      <div class="skills-cta__icon">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path>
          <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path>
        </svg>
      </div>
      <div class="skills-cta__text">
        <h2>Find Expert Salesforce Development Skills</h2>
        <p>Access curated skills for Apex development, testing automation, deployment best practices and more.</p>
      </div>
      <a href={base + "/skills"} class="skills-cta__button">
        Browse Skills
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="5" y1="12" x2="19" y2="12"></line>
          <polyline points="12 5 19 12 12 19"></polyline>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .skills-cta {
    padding: var(--space-12) 0;
    background: linear-gradient(135deg, #f0f7ff 0%, #e6f2ff 100%);
  }
  
  :global([data-theme="dark"]) .skills-cta {
    background: linear-gradient(135deg, #1a2332 0%, #21303f 100%);
  }
  
  .skills-cta__content {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: var(--space-6);
    max-width: 800px;
    margin: 0 auto;
  }
  
  @media (min-width: 768px) {
    .skills-cta__content {
      flex-direction: row;
      text-align: left;
      gap: var(--space-8);
    }
  }
  
  .skills-cta__icon {
    flex-shrink: 0;
  }
  
  .skills-cta__icon svg {
    width: 64px;
    height: 64px;
    color: var(--color-primary);
  }
  
  .skills-cta__text {
    flex: 1;
  }
  
  .skills-cta__text h2 {
    font-size: var(--text-2xl);
    font-weight: 700;
    margin-bottom: var(--space-3);
    color: var(--color-text-primary);
  }
  
  @media (min-width: 768px) {
    .skills-cta__text h2 {
      font-size: var(--text-3xl);
    }
  }
  
  .skills-cta__text p {
    font-size: var(--text-base);
    color: var(--color-text-secondary);
    line-height: var(--leading-relaxed);
    margin: 0;
  }
  
  .skills-cta__button {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-4) var(--space-6);
    background-color: var(--color-primary);
    color: white;
    font-size: var(--text-base);
    font-weight: 600;
    border-radius: var(--radius-lg);
    text-decoration: none;
    transition: all var(--transition-base);
    white-space: nowrap;
  }
  
  .skills-cta__button:hover {
    background-color: #005fb2;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(0, 112, 210, 0.3);
  }
  
  .skills-cta__button svg {
    width: 16px;
    height: 16px;
    transition: transform var(--transition-base);
  }
  
  .skills-cta__button:hover svg {
    transform: translateX(4px);
  }
</style>
