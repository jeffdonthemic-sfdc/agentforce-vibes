---
interface Props {
  title: string;
  description?: string;
  type: string;
  url: string;
  image: string;
}

const { title, description, type, url, image } = Astro.props;
---

<article class="resource-card">
  <a href={url} target="_blank" rel="noopener noreferrer">
    <div class="resource-card__image">
      <img src={image} alt={title} loading="lazy" />
    </div>
    <div class="resource-card__content">
      <span class="resource-card__type">{type}</span>
      <h3 class="resource-card__title">{title}</h3>
      {description && <p class="resource-card__description">{description}</p>}
    </div>
  </a>
</article>

<style>
  .resource-card a {
    display: flex;
    flex-direction: column;
    height: 100%;
    color: inherit;
    text-decoration: none;
  }
  
  .resource-card__image {
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background-color: var(--color-background-secondary);
  }
  
  .resource-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }
  
  .resource-card:hover .resource-card__image img {
    transform: scale(1.05);
  }
  
  .resource-card__content {
    flex: 1;
    display: flex;
    flex-direction: column;
    padding: var(--space-6);
  }
  
  .resource-card__type {
    display: inline-block;
    font-size: var(--text-xs);
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: var(--space-2);
    text-transform: uppercase;
    letter-spacing: 0.02em;
  }
  
  .resource-card__title {
    font-size: var(--text-xl);
    font-weight: 700;
    line-height: var(--leading-tight);
    margin-bottom: var(--space-2);
    color: var(--color-text-primary);
  }
  
  .resource-card__description {
    font-size: var(--text-sm);
    line-height: var(--leading-relaxed);
    color: var(--color-text-secondary);
    margin: 0;
  }
</style>

