---
import { getCollection } from 'astro:content';

const base = import.meta.env.BASE_URL;

// Get the 3 most recent resources
const allResources = (await getCollection('resources')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
const resources = allResources.slice(0, 3);
---

<section class="resource-cards">
  <div class="container">
    <div class="resource-cards__wrapper">
      <div class="resource-cards__mascot">
        <img src={base + "/vibey-codey-transparent.png"} alt="Agentforce Bear" loading="lazy" />
      </div>
      <div class="resource-cards__grid">
        {resources.map((resource) => (
          <a href={resource.data.url} target="_blank" rel="noopener noreferrer" class="resource-card">
            <div class="resource-card__image">
              <img src={resource.data.image} alt={resource.data.title} loading="lazy" />
            </div>
            <div class="resource-card__content">
              <span class="resource-card__type">{resource.data.type}</span>
              <h3 class="resource-card__title">{resource.data.title}</h3>
            </div>
          </a>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .resource-cards {
    padding: var(--space-6) 0 var(--space-8);
    background-color: var(--color-background);
  }
  
  .resource-cards__wrapper {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-6);
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
  }
  
  @media (min-width: 768px) {
    .resource-cards__wrapper {
      grid-template-columns: 200px 1fr;
      gap: var(--space-8);
    }
  }
  
  .resource-cards__mascot {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .resource-cards__mascot img {
    width: 100%;
    max-width: 135px;
    height: auto;
    object-fit: contain;
  }
  
  @media (min-width: 768px) {
    .resource-cards__mascot img {
      max-width: 150px;
    }
  }
  
  .resource-cards__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-3);
  }
  
  @media (min-width: 640px) {
    .resource-cards__grid {
      grid-template-columns: repeat(3, 1fr);
      gap: var(--space-4);
    }
  }
  
  .resource-card {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: var(--space-3);
    background-color: var(--color-surface);
    border-radius: var(--radius-md);
    overflow: hidden;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.08);
    transition: all 0.2s ease;
    text-decoration: none;
    color: inherit;
    padding: var(--space-3);
  }
  
  .resource-card:hover {
    transform: translateY(-1px);
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.12);
  }
  
  .resource-card__image {
    flex-shrink: 0;
    width: 80px;
    height: 60px;
    overflow: hidden;
    background-color: var(--color-background-secondary);
    border-radius: var(--radius-sm);
  }
  
  .resource-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .resource-card__content {
    flex: 1;
    min-width: 0;
  }
  
  .resource-card__type {
    display: block;
    font-size: 10px;
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: 2px;
    text-transform: uppercase;
    letter-spacing: 0.02em;
  }
  
  .resource-card__title {
    font-size: 13px;
    font-weight: 700;
    line-height: 1.3;
    color: var(--color-text-primary);
    margin: 0;
  }
</style>

