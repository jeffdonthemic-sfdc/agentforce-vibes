---
const { pathname } = Astro.url;
const base = import.meta.env.BASE_URL;
---

<header class="header">
  <div class="container header__inner">
    <a href={base + "/"} class="header__logo">
      <img src={base + "/salesforce-logo.svg"} alt="Salesforce Logo" class="header__logo-icon" />
      <span>Agentforce Vibes</span>
    </a>
    
    <nav class="header__nav">
      <a href={base + "/"} class:list={["header__nav-link", { active: pathname === base + "/" }]}>Home</a>
      <a href={base + "/resources"} class:list={["header__nav-link", { active: pathname.startsWith(base + "/resources") }]}>Resources</a>
      <a href={base + "/videos"} class:list={["header__nav-link", { active: pathname.startsWith(base + "/videos") }]}>Videos</a>
      <a href="https://developer.salesforce.com/docs/platform/einstein-for-devs/guide/einstein-setup.html" class="header__nav-link" target="_blank" rel="noopener noreferrer">Docs</a>
    </nav>
    
    <div class="header__actions">
      <a href="https://marketplace.visualstudio.com/items?itemName=salesforce.salesforcedx-einstein-gpt" target="_blank" rel="noopener noreferrer" class="vscode-link" aria-label="Download VS Code Extension">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
          <path d="M23.15 2.587L18.21.21a1.494 1.494 0 0 0-1.705.29l-9.46 8.63-4.12-3.128a.999.999 0 0 0-1.276.057L.327 7.261A1 1 0 0 0 .326 8.74L3.899 12 .326 15.26a1 1 0 0 0 .001 1.479L1.65 17.94a.999.999 0 0 0 1.276.057l4.12-3.128 9.46 8.63a1.492 1.492 0 0 0 1.704.29l4.942-2.377A1.5 1.5 0 0 0 24 20.06V3.939a1.5 1.5 0 0 0-.85-1.352zm-5.146 14.861L10.826 12l7.178-5.448v10.896z"/>
        </svg>
      </a>
      
      <a href="https://github.com/forcedotcom/Einstein-GPT-for-Developers/" target="_blank" rel="noopener noreferrer" class="github-link" aria-label="View on GitHub">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
      </a>
      
      <button id="search-toggle" class="search-toggle" aria-label="Search">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="11" cy="11" r="8"></circle>
          <path d="m21 21-4.3-4.3"></path>
        </svg>
      </button>
      
      <button id="theme-toggle" class="theme-toggle" aria-label="Toggle theme">
        <svg class="icon-sun" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="12" cy="12" r="4"></circle>
          <path d="M12 2v2"></path>
          <path d="M12 20v2"></path>
          <path d="m4.93 4.93 1.41 1.41"></path>
          <path d="m17.66 17.66 1.41 1.41"></path>
          <path d="M2 12h2"></path>
          <path d="M20 12h2"></path>
          <path d="m6.34 17.66-1.41 1.41"></path>
          <path d="m19.07 4.93-1.41 1.41"></path>
        </svg>
        <svg class="icon-moon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M12 3a6 6 0 0 0 9 9 9 9 0 1 1-9-9Z"></path>
        </svg>
      </button>
    </div>
  </div>
</header>

<style>
  .header__nav-link.active {
    color: var(--color-primary);
    font-weight: 600;
  }
  
  .vscode-link,
  .github-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    color: var(--color-text-primary);
    transition: color var(--transition-fast);
  }
  
  .vscode-link:hover,
  .github-link:hover {
    color: var(--color-primary);
  }
  
  .vscode-link svg,
  .github-link svg {
    width: 22px;
    height: 22px;
  }
</style>
